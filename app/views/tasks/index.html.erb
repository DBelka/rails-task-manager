<h1><strong>Tasks</strong></h1>
<% @tasks.each do |task| %>
  <%= link_to task_path(task.id) do %>
    <h3><%= task.title %></h3>
  <% end %>
  <% if task.completed %>
      <input type="checkbox" checked>
  <% else %>
     <input type="checkbox">
  <% end %>
  <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
<% end %>

<%= link_to new_task_path do %>
<p>Create a new task</p>
<% end %>
